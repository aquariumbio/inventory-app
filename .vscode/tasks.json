    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create inventory",
            "type": "shell",
            "command": "rails new inventory -G --skip && cd inventory && bundle install"
        },
        {
            "label": "Delete inventory",
            "type": "shell",
            "command": "cd inventory && rm -rf * && rm -f .ruby-version"
        },
    ],
}