<%= form_with(model: container) do |form| %>
  <% if container.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(container.errors.count, "error") %> prohibited this container from being saved:</h2>

      <ul>
        <% container.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.text_area :quantity %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_area :location %>
  </div>

  <div class="field">
    <%= form.label :container_type_id %>
    <%= form.collection_select(:container_type_id, ContainerType.all, :id, :name) %>
  </div>

  <div class="field">
    <%= form.label :format_id %>
    <%= form.number_field :format_id %>
  </div>

  <div class="field">
    <%= form.label :format_type %>
    <%= form.text_field :format_type %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
