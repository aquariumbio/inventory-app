<% title 'Physical States' %>
<p id="notice"><%= notice %></p>

<h1>Physical States</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Physical state type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @physical_states.each do |physical_state| %>
      <tr>
        <td><%= physical_state.name %></td>
        <td><%= physical_state.description %></td>
        <td><%= physical_state.physical_state_type.name %></td>
        <td><%= link_to 'Show', physical_state %></td>
        <td><%= link_to 'Edit', edit_physical_state_path(physical_state) %></td>
        <td><%= link_to 'Destroy', physical_state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Physical State', new_physical_state_path %>
